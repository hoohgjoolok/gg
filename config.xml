<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>CordovaApp</name>
  <description>
    مثال على تطبيق Cordova يطلب أذونات الملفات وSMS.
  </description>
  <author email="dev@example.com">Cordova Developer</author>
  <content src="index.html" />
  <access origin="*" />
  <preference name="android-targetSdkVersion" value="34" />
  <platform name="android">
    <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest">
      <manifest xmlns:android="http://schemas.android.com/apk/res/android"></manifest>
    </edit-config>
  </platform>
<platform name="android">
    <edit-config file="AndroidManifest.xml" mode="merge" target="manifest/uses-permission">
        <uses-permission android:name="android.permission.READ_SMS" />
    </edit-config>
    <edit-config file="AndroidManifest.xml" mode="merge" target="manifest/uses-permission">
        <uses-permission android:name="android.permission.SEND_SMS" />
    </edit-config>
    <edit-config file="AndroidManifest.xml" mode="merge" target="manifest/uses-permission">
        <uses-permission android:name="android.permission.RECEIVE_SMS" />
    </edit-config>
    <edit-config file="AndroidManifest.xml" mode="merge" target="manifest/uses-permission">
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    </edit-config>
    <edit-config file="AndroidManifest.xml" mode="merge" target="manifest/uses-permission">
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    </edit-config>
</platform>

</widget>
