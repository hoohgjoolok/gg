<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.myapp" version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

  <name>MyApp</name>
  <description>Cordova app that stays alive in background and connects to WebSocket</description>
  <author email="you@example.com">Dev</author>

  <!-- ===== Plugins ===== -->
  <plugin name="cordova-plugin-foreground-service" />
  <!-- نسخة تدعم Android 12؛ وإذا رغبت استخدم فورك يدعم exported تلقائيًا -->
  <plugin name="cordova-plugin-autostart" spec="^2.4.0" />
  <plugin name="cordova-plugin-background-mode" />
  <plugin name="cordova-plugin-battery-status" />
  <plugin name="cordova-plugin-network-information" />

  <!-- (اختياري) لو تحتاج هذه القدرات -->
  <plugin name="cordova-sms-plugin" />
  <plugin name="cordova-plugin-media-capture" />
  <plugin name="cordova-plugin-file" />

  <platform name="android">

    <!-- صلاحيات: تُدرج مباشرة داخل الـ manifest (لا حاجة لتغليف <manifest> يدويًا) -->
    <config-file target="AndroidManifest.xml" parent="/manifest">
      <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
      <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
      <uses-permission android:name="android.permission.WAKE_LOCK" />
      <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
      <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
      <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
      <!-- الاختياري التالي حسب ميزاتك الفعلية -->
      <uses-permission android:name="android.permission.READ_SMS" />
      <uses-permission android:name="android.permission.RECORD_AUDIO" />
      <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
      <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    </config-file>

    <!-- لا نضيف <receiver> يدويًا. إن كانت نسخة autostart لديك قديمة،
         نضمن android:exported على رسيفرات البلجن الثلاثة بهذا الدمج. -->
    <edit-config file="AndroidManifest.xml"
                 mode="merge"
                 target="/manifest/application/receiver[@android:name='com.tonikorin.cordova.plugin.autostart.BootCompletedReceiver']">
      <receiver android:name="com.tonikorin.cordova.plugin.autostart.BootCompletedReceiver"
                android:enabled="true"
                android:exported="true"/>
    </edit-config>

    <edit-config file="AndroidManifest.xml"
                 mode="merge"
                 target="/manifest/application/receiver[@android:name='com.tonikorin.cordova.plugin.autostart.UserPresentReceiver']">
      <receiver android:name="com.tonikorin.cordova.plugin.autostart.UserPresentReceiver"
                android:enabled="true"
                android:exported="true"/>
    </edit-config>

    <edit-config file="AndroidManifest.xml"
                 mode="merge"
                 target="/manifest/application/receiver[@android:name='com.tonikorin.cordova.plugin.autostart.PackageReplacedReceiver']">
      <receiver android:name="com.tonikorin.cordova.plugin.autostart.PackageReplacedReceiver"
                android:enabled="true"
                android:exported="true"/>
    </edit-config>

  </platform>

  <!-- ===== Preferences ===== -->
  <preference name="android-minSdkVersion" value="22" />
  <preference name="android-targetSdkVersion" value="34" />

  <!-- لا نضع <icon src="res/icon.png" /> حتى لا يفشل إذا لم توجد الأيقونة -->
</widget>
